:{$PORT:8080} {
	log {
		output stdout
		format console
		level DEBUG
	}

	# Backend API routes
	handle /api/* {
		reverse_proxy localhost:5000
	}

	# Health check
	handle /health {
		respond "Caddy is OK" 200
	}

	# CRM application - strip /crm prefix
	handle_path /crm* {
		root * /app/crm/dist
		try_files {path} /index.html
		file_server
	}

	# Public site (default) - serve static files
	handle {
		root * /app/public-site/dist
		try_files {path} /index.html
		file_server
	}
}
