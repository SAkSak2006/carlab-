:{$PORT:8080} {
	# Backend API routes
	handle /api/* {
		reverse_proxy localhost:5000
	}

	# Health check for Caddy
	handle /health {
		respond "OK" 200
	}

	# CRM application - strip /crm prefix
	handle_path /crm* {
		root * /app/crm/dist
		try_files {path} /index.html
		file_server
	}

	# Public site (default)
	handle {
		root * /app/public-site/dist
		try_files {path} /index.html
		file_server
	}

	# Security headers
	header {
		X-Content-Type-Options "nosniff"
		X-Frame-Options "DENY"
		Referrer-Policy "no-referrer-when-downgrade"
	}

	# Detailed logging
	log {
		output stdout
		format console
		level DEBUG
	}
}
